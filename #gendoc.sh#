#!/bin/sh

git checkout gh-pages
rm -rf _build _sources _static
git checkout master .
git reset HEAD
make html -c doc/
mv -fv _build/html/* ./
rm -rf doc *.py
git add -A
git commit -m "Autogenerated gh-pages for `git log master -1 --pretty=short --abbrev-commit`" 
git push origin gh-pages 
git checkout master

 
